<%= render 'layouts/header' %>
<%= @room.id %>
<h2><strong>会話相手 : <%= @user.name %></strong></h2>
<div id="messages" data-room_id="<%= @room.id %>" data-user_id="<%= current_user.id %>" data-user_name="<%= current_user.name %>" >
	<% @chatall.each do |c| %>
		<strong><%= c.user.name %></strong> : <%= c.message %>
		<br>
	<% end %>
</div>
<form>
	<input type="text" data-behavior="chat_speaker">
</form>
<%= render 'layouts/footer' %>