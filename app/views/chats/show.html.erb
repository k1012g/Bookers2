<%= render 'layouts/header' %>
<div class="container">
	<h2><strong>会話相手 : <%= @user.name %></strong></h2>
	<div id="messages" data-room_id="<%= @room.id %>" data-user_id="<%= current_user.id %>" data-user_name="<%= current_user.name %>" data-user_talk_id="<%= @user.id %>" >
		<% @chatall.each do |c| %>
			<strong><%= c.user.name %></strong> : <%= c.message %>
			<br>
		<% end %>
	</div>
	<form>
		<input type="text" data-behavior="chat_speaker">
	</form>
</div>
<%= render 'layouts/footer' %>