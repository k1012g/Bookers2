<div class="col-xs-9">
	<h2>Books</h2>
	<table class="table">
		<th>Image</th>
		<th>Name</th>
		<th>Title</th>
		<th>Opinion</th>
		<th></th>
		<th></th>
		<tr>
			<% books.each do |book| %>
			<td>
				　<!-- 画像リンクをつけたい -->
				<a><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.png" %></a>
			</td>
			<td><%= link_to "#{book.user.name}", user_path(book.user.id) %></td>
			<td style="padding: 10px;">
				<%= link_to book.title, book_path(book.id) %>
			</td>
			<td style="padding: 10px;">
				<%= book.body %>
			</td>
			<td>
				<div id="favorites_<%= book.id %>">
					<%= render 'favorites/favorites',book_show: book %>
				</div>
			</td>
			<td>
				コメント数 : <%= book.book_comments.count %>
			</td>
    	</tr>
    	<% end %>
	</table>
</div>